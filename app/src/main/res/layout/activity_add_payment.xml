<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.addPayment">
    <FrameLayout
        android:layout_weight="13"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <me.dm7.barcodescanner.zxing.ZXingScannerView
            android:id="@+id/qrCodeScanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </me.dm7.barcodescanner.zxing.ZXingScannerView>
        <TextView
            android:textColor="@android:color/white"
            android:fontFamily="@font/helvetica_condensed_black"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Scan Any QR Code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        android:paddingLeft="10dp"
        app:cardBackgroundColor="@color/bg_black"
        android:paddingRight="10dp"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <EditText
                android:background="@android:color/white"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:hint="Enter 10 Digit Mobile Number"
                android:layout_weight="10"
                android:layout_height="40dp"
                android:id="@+id/editTextNumber"
                android:layout_width="0dp" />
            <ImageView
                android:layout_marginLeft="5dp"
                android:id="@+id/contactsImageView"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/contact"
                android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>